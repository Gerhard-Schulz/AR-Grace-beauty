@model IEnumerable<Service>
@{
    ViewData["Title"] = "Услуги";
}

<table class="table table-hover w-100 mt-3 pb-2 cell-centered rounded-corners">
    <thead class="table-dark"> 
        <tr>
            <th colspan="3">
                <h1 class="text-center text-light mt-1">Услуги</h1>
            </th>
        </tr>
    </thead>
    <tbody class="table-primary">
        @foreach (var service in Model)
        {
            <tr>
                <td>
                    @service.Name
                </td>
                <td>
                    @service.Price руб.
                </td>
                <td>
                    <div class="btn-group w-100" role="group">
                        <a asp-controller="Service" asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning"><i class="bi bi-pen"></i> Изменить</a>
                        <a asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id" class="btn btn-primary"><i class="bi bi-trash3"></i> Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
